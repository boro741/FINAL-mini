<script>
    $("#createEvent").click(function(){
        $("#eventContainer").html("<form method='post' action='/events/createEvent'> <div class='form-group'> <label>Event Name:</label> <input type='text' class='form-control' name='eventName'></div>  <div class='form-group'> <label>Description:</label> <textarea name='description' rows='10' cols='30' class='form-control'></textarea><div> <div class='form-group'> <input type='file' onchange='readURL(this)' name='poster' /> <img id='poster' onclick='sr(this.src)'></div> <div class='form-group'> <label> Event Date: </label> <input type='date' name='eventDate' ></div> <div class='form-group'> <label>Mobile No: </label> <input type='number' name='mobileNo'> </div> <div class='form-group'><label>Email ID: </label> <input type='email' name='emailId'> </div> <div class='form-group'><label>Price: </label> <input type='number' placeholder='Rs.' name='price' > </div><button type='submit' class='btn btn-default'>Publish</button></form>");
    });

    function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#poster')
                        .attr('src', e.target.result);
                };
               reader.readAsDataURL(input.files[0]);
            }
        }
    
    
    function sr(sou){
        console.log('src: ',sou);
    }


</script> 